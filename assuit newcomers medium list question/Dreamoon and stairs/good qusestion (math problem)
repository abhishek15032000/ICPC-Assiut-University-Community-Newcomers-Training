#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  ll n,m;
  cin>>n>>m;
  int ans=(n+1)/2;
  int ans2=((ans+m-1)/m)*m;
  if(ans2>n)
  cout<<-1<<endl;
  else
  cout<<ans2<<endl;
  
  }
  


https://codeforces.com/group/MWSDmqGsZm/contest/223207/problem/I   ----PROBLEM LINK













#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   ll n;
   cin>>n;
   ll arr[n];
   for(int i=0;i<n;i++)
   {
     cin>>arr[i];
   }
   sort(arr,arr+n);
   for(int i=0;i<n;i++)
   {
      if(i==0)
      {
         int minium=abs(arr[i+1]-arr[0]);
         int maximum=abs(arr[n-1]-arr[0]);
         cout<<minium<<" "<<maximum<<endl;
      }
      else if(i==n-1)
      {
         int minium=abs(arr[i-1]-arr[i]);
         int maximum=abs(arr[0]-arr[i]);
         cout<<minium<<" "<<maximum<<endl;
      }
      else
      {
          int minium=min(abs(arr[i-1]-arr[i]),abs(arr[i+1]-arr[i]));
          int maximum=max(abs(arr[0]-arr[i]),abs(arr[n-1]-arr[i]));
          cout<<minium<<" "<<maximum<<endl;
      }
   }
}

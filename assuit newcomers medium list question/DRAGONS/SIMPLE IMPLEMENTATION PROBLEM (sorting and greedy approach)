#include<bits/stdc++.h>
using namespace std;
#define ll long long int

bool compare(pair<int,int>p1,pair<int,int>p2)
{
   if(p1.first<p2.first)
   {
     return true;
   }
   else if(p1.first==p2.first)
   {
      if(p1.second>p2.second)
      return true;
      else
      return false;
   }
   else
   return false;
}

int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   ll initial_strength,dragons;
   cin>>initial_strength>>dragons;
   vector<pair<int,int>>v;
   for(int i=0;i<dragons;i++)
   {
       ll strength_dragon,boost_up;
       cin>>strength_dragon>>boost_up;
       v.push_back(make_pair(strength_dragon,boost_up));
   }
   sort(v.begin(),v.end(),compare);
   bool ans=true;
   for(int i=0;i<dragons;i++)
   {
       if(initial_strength>v[i].first)
       {
         initial_strength+=v[i].second;
       }
       else
       {ans=false;
       break;}
   }
   if(ans)
   {
     cout<<"YES"<<endl;
   }
   else
   {
     cout<<"NO"<<endl;
   }
}

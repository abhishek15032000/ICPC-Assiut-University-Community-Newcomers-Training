Yaroslav and Permutations 

https://codeforces.com/group/MWSDmqGsZm/contest/223207/problem/O   ---PROBLEM LINK
 







#include<bits/stdc++.h>
using namespace std;
#define ll long long int 
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   ll n;
   cin>>n;
   ll arr[n];
   for(ll i=0;i<n;i++)
   cin>>arr[i];
   map<int,int> m;
   for(int i=0;i<n;i++)
   {
      m[arr[i]]++;
   }
   bool ans1=false;
   for(auto it=m.begin();it!=m.end();it++)
   {
      if(it->second>1)
      {
         ll x=it->second;
         if(x>(n+1)/2)
       {  cout<<"NO"<<endl;
       ans1=true;
         break;
      }
      }
   }
   if(!ans1)
   cout<<"YES"<<endl;
}

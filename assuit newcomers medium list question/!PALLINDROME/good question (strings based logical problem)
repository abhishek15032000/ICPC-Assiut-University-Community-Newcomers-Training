#include<bits/stdc++.h>
using namespace std;
#define ll long long int
bool ispallindrome(string str)
{
   int i=0;
   int j=str.length()-1;
   while(i<=j)
   {
      if(str[i]==str[j])
       {
          i++;
          j--;
       }
       else
       return false;
   }
   return true;
}
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   string str;
   getline(cin,str);
   if(str.length()==1)
   cout<<0<<endl;
   else
   {  

     char c=str[0];
     bool ans1=false;
     for(int i=1;i<str.length();i++)
     {
       if(str[i]!=c)
       {
         ans1=true;
         break;
       }
     }
     
     if(!ans1)
     cout<<0<<endl;
     else
     {

      if(ispallindrome(str))
      {
         int length=str.length()-1;
         cout<<length<<endl;
      }
      else
      {
        int length=str.length();
        cout<<length<<endl;
      }
     }
   }
}

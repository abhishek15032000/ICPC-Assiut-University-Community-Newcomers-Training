
https://codeforces.com/group/MWSDmqGsZm/contest/223207/problem/S  -----PROBLEM LINK
 






#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  ll n;
  cin>>n;
  ll arr[n];
  for(ll i=0;i<n;i++)
  cin>>arr[i];
  sort(arr,arr+n);
  bool ans1=false;
  for(int i=0;i<=n-3;i++)
  {
   if(arr[i]+arr[i+1]>arr[i+2])
   {
     ans1=true;
     break;
     }
 }
 if(ans1)
 cout<<"YES"<<endl;
 else
 cout<<"NO"<<endl;
 }

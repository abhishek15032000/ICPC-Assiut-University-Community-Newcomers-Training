

https://codeforces.com/group/MWSDmqGsZm/contest/223207/problem/G   ---PROBLEM LINK





#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   ll n;
   cin>>n;
   ll original_amount=0;
   ll arr[101];
   for(int i=0;i<n;i++)
   {
     cin>>arr[i];
    original_amount+=arr[i];
   }
   sort(arr,arr+n);
   int count=0;
   int sum2=0;
   for(int i=n-1;i>=0;i--)
  {
       sum2+=arr[i];
       original_amount=original_amount-arr[i];
       if(sum2>original_amount)
       {
          break;
       }
       else
       count++;
  }
  cout<<(count+1)<<endl;
}

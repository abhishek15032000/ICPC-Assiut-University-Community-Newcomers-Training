




https://codeforces.com/group/MWSDmqGsZm/contest/223206/problem/R   ----PROBLEM LINK












#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  ll n;
  cin>>n;
  vector<ll>v(n);
  for(int i=0;i<n;i++)
  {
    cin>>v[i];
  }
  int min_element=INT_MAX;
  int index1=INT_MIN;
  int max_element=INT_MIN;
  int index2=INT_MAX;

  for(int i=0;i<v.size();i++)
  {
     if(v[i]>max_element)
     {
       max_element=v[i];
       index2=i;
     }
  }
 // cout<<index2<<endl;
  ll count1=0;
  for(ll i=index2;i>0;i--)
  {
       if(v[i]>v[i-1])
       {swap(v[i],v[i-1]);
       count1++;
       }

  }
 //cout<<count1<<endl;
  for(int i=0;i<v.size();i++)
  {
     if(v[i]<=min_element and i>index1)
     {
       min_element=v[i];
       index1=i;
     }
  }
  //cout<<index1<<" "<<min_element<<endl;
  ll count2=0;
  for(int i=index1;i<v.size()-1;i++)
  {
     if(v[i]<v[i+1])
     {
       count2++;
       swap(v[i],v[i+1]);
     }
  }
  cout<<(count1+count2)<<endl;
}




https://codeforces.com/group/MWSDmqGsZm/contest/223206/problem/B   -----PROBLEM LINK












#include<bits/stdc++.h>
using namespace std;
#define ll long long int 
int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    ll n;
    cin>>n;
    if(n%2==0)
    {
        int i=1;
        int j=n-1;
        while(i<=j)
        {
           if((i+j)==n)
           {
               if((i%2)==0 and (j%2)==0)
               {
                   cout<<"YES"<<endl;
                   return 0;
               }
               else
               {
                   i++;
                   j--;
               }
           } 
           else if((i+j)>n)
           {
               j--;
           }
           else
           {
               i++;
           }
        }
        cout<<"NO"<<endl;
    }
    else
    {
        cout<<"NO"<<endl;
    }
}

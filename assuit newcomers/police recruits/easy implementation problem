https://codeforces.com/group/MWSDmqGsZm/contest/223206/problem/P  ---PROBLEM LINK




#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  ll n;
  cin>>n;
  ll recruits_so_far=0;
  ll uncounted=0;
  for(int i=0;i<n;i++)
  {
     ll x;
     cin>>x;
     if(x<0)
     {  //cout<<"executed 4"<<endl;
        if(recruits_so_far==0)
        {  //cout<<"executed 1"<<endl;
            uncounted++;
        }
        else if(recruits_so_far>0)
        { // cout<<"executed 2"<<endl;
           recruits_so_far=recruits_so_far-1;
          // cout<<recruits_so_far<<endl;
        }
     }
     else
     { //cout<<"executed 3"<<endl;
       recruits_so_far+=x;
      // cout<<recruits_so_far<<endl;
     }
  }
  cout<<uncounted<<endl;
}

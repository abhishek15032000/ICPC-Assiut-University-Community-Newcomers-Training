#include<bits/stdc++.h>
using namespace std;
#define mod 10000000000000000000007
#define ll long long int
#define PI 3.141592653
 
void sum(ll n)
{
	ll first=(n%mod);
	ll second=(n+1)%mod;
	ll sum=(first*second)%mod;
	sum=sum/2;
	sum=sum%mod;
	cout<<sum<<endl;
}
int main()
{   ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    ll n;
    cin>>n;
   sum(n);
}

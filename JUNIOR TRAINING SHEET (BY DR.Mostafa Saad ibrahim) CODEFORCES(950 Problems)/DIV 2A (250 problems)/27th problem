


https://codeforces.com/contest/490/problem/A  --problem link 






#include<bits/stdc++.h>
using namespace std;
#define ll long long int

ll index_find(ll arr[],ll size,ll element)
{
   for(int i=1;i<size;i++)
   {
      if(arr[i]==element)
      { arr[i]=-1;
        return i;
      }
   }
   return size;
}


int main()
{
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  ll n;
  cin>>n;
  ll arr[n+1]={0};
  ll x=0;
  ll y=0;
  ll z=0;
  for(int i=1;i<=n;i++)
  {
     cin>>arr[i];
     if(arr[i]==1)
     {
       x++;
     }
     if(arr[i]==2)
     {
       y++;
     }
     if(arr[i]==3)
     {
       z++;
     }
  }
  int ans=min({x,y,z});
  cout<<ans<<endl;
  if(ans!=0)
  {
      for(int i=1;i<=ans;i++)
      {
         cout<<index_find(arr,n+1,1)<<" ";
         cout<<index_find(arr,n+1,2)<<" ";
         cout<<index_find(arr,n+1,3)<<endl;
      }
  }
}

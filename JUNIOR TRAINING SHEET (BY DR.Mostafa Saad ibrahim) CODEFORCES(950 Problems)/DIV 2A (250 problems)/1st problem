http://codeforces.com/contest/677/problem/A   ---PROBLEM LINK 




#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   ll n,h;
   cin>>n>>h;
   ll count=0;
   for(int i=0;i<n;i++)
   {
     ll x;
     cin>>x;
     if(x<=h)
     {
       count++;
     }
     else
     {
       count+=2;
     }
   }
   cout<<count<<endl;
}

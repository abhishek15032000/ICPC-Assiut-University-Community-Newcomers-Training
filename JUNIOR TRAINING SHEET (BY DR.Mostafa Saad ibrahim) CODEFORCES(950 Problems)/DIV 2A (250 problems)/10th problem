https://codeforces.com/contest/344/problem/A   ---PROBLEM LINK 










#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   ll n;
   cin>>n;
   ll arr[n];
   for(int i=0;i<n;i++)
   {
     cin>>arr[i];
   }
   int i=0;
   int j=1;
   int count=0;
   while(j<n)
   { 
      if(arr[j]==arr[i])
      {
         j++;
      }
      else
      {
         count+=1;
         i=j;
         j++;
      }
   }
   count+=1;
   cout<<count<<endl;
}

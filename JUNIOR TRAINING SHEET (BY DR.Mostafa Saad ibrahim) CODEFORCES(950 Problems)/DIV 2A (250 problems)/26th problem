






https://codeforces.com/contest/339/problem/A    ----PROBLEM LINK 





#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
  ios_base::sync_with_stdio(false);
  cin.tie(NULL);
  cout.tie(NULL);
  int x=0;
  int y=0;
  int z=0;
  string s;
  getline(cin,s);
  for(int i=0;i<s.length();i++)
  {
     if(s[i]=='3')
     {
       z++;
     }
     if(s[i]=='2')
     {
       y++;
     }
     if(s[i]=='1')
     {
       x++;
     }
  }
  int total=x+y+z-1;
  while(x>0)
  {
    cout<<1;
    x--;
    if(total>0)
    {
      cout<<"+";
      total--;
    }
  }
  while(y>0)
  {
    cout<<2;
    y--;
    if(total>0)
    {
      cout<<"+";
      total--;
    }
  }
  while(z>0)
  {
    cout<<3;
    z--;
    if(total>0)
    {
      cout<<"+";
      total--;
    }
  }
}

https://codeforces.com/contest/427/problem/A   ---PROBLEM LINK 





#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   ll n;
   cin>>n;
   ll arr[n];
   for(int i=0;i<n;i++)
   cin>>arr[i];
   int available=0;
   int count=0;
   for(int i=0;i<n;i++)
   {
      if(arr[i]<0 and available==0)
      {
         count++;
      }
      else if(arr[i]<0 and available>0)
      {
         available--;
      }
      
      if(arr[i]>0)
      {
         available+=arr[i];
      }
   }
   cout<<count<<endl;
}

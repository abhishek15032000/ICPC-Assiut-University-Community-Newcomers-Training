

https://codeforces.com/contest/431/problem/A    ---PROBLEM LINK 






#include<bits/stdc++.h>
using namespace std;
#define ll long long int
int main()
{
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);
   cout.tie(NULL);
   unordered_map<int,int>m;
   for(int i=1;i<=4;i++)
   {
      ll x;
      cin>>x;
      m[i]=x;
   }
   cin.get();
   string s;
   getline(cin,s);
   int count=0;
   for(int i=0;i<s.length();i++)
   {
      count+=m[s[i]-'0'];
   }
   cout<<count<<endl;
}
